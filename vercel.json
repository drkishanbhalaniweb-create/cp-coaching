{
    "version": 2,
    "builds": [
        {
            "src": "api/**/*.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/api/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/$1"
        }
    ],
    "env": {
        "STRIPE_SECRET_KEY": "@stripe-secret-key",
        "STRIPE_PUBLISHABLE_KEY": "@stripe-publishable-key",
        "STRIPE_PRICE_ID": "@stripe-price-id",
        "CALENDLY_LINK": "@calendly-link",
        "DOMAIN": "@domain"
    }
}